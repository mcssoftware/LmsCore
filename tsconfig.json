{
  "compilerOptions": {
    "target": "es5",
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@microsoft",
      "./node_modules"
    ],
    "lib": [
      "es6",
      "dom"
    ],
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}